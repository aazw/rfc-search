{
  "name": "vsc-rfc-search-${localWorkspaceFolderBasename}-${devcontainerId}",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "initializeCommand": "bash -lc 'mkdir -p \"${localWorkspaceFolder}/.devcontainer/.state/claude\" \"${localWorkspaceFolder}/.devcontainer/.state/codex\"'",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "emeraldwalk.runonsave",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "anthropic.claude-code",
        "openai.chatgpt",
        "ms-python.python",
        // "ms-python.black-formatter",
        // "ms-python.isort",
        "charliermarsh.ruff",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/python/.venv/bin/python"
      }
    }
  },
  // "workspaceMount": "source=${localWorkspaceFolder}/..,target=/workspaces,type=bind,consistency=cached",
  // "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "mounts": [
    {
      // ~/.claude に保存される claude code のセッションを永続化 (DevContainer再作成時など)
      "source": "${localWorkspaceFolder}/.devcontainer/.state/claude",
      "target": "/home/vscode/.claude",
      "type": "bind"
    },
    {
      // ~/.codex に保存される codex のセッションを永続化 (DevContainer再作成時など)
      "source": "${localWorkspaceFolder}/.devcontainer/.state/codex",
      "target": "/home/vscode/.codex",
      "type": "bind"
    }
  ],
  // containerUser は、コンテナ起動時・初期化処理のユーザ. docker psできるようにするために必要
  "containerUser": "root",
  "remoteUser": "vscode",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "TZ": "Asia/Tokyo",
    "TASK_X_ENV_PRECEDENCE": "1",
    "UV_PROJECT_ENVIRONMENT": "${containerWorkspaceFolder}/python/.venv"
  },
  "runArgs": [
    "--name",
    "vsc-rfc-search-${localWorkspaceFolderBasename}-${devcontainerId}",
    "--add-host",
    "host.docker.internal:host-gateway"
  ],
  "postAttachCommand": "task init"
}
