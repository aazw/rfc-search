{
  "search.exclude": {
    "**/.git/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/.devbox/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.devbox": true // 重いので追加
  },
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/.venv/**": true,
    "**/__pycache__/**": true,
    "**/.devbox/**": true
  },
  "editor.formatOnSave": false,
  "files.associations": {
    "devbox.json": "jsonc",
    "*.css": "tailwindcss"
  },
  "editor.wordWrap": "off",
  "[markdown]": {
    "editor.wordWrap": "off"
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        // treefmt側でフォーマッタを選択する
        "match": ".*",
        "cmd": "treefmt \"${file}\""
      }
    ]
  },
  "python.analysis.typeCheckingMode": "strict",
  // CSS
  "[css][tailwindcss]": {
    "editor.defaultFormatter": "bradlc.vscode-tailwindcss",
    "editor.formatOnSave": true
  }
}
