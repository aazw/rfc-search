{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":configMigration"],
  "labels": ["Renovate"],
  "assignees": ["aazw"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 10,
  "minimumReleaseAge": "7 days",
  "customManagers": [],
  "ignorePaths": ["docs/**"],
  "packageRules": [
    {
      // Dockerfile のベースイメージ更新は最低経過時間を無効化
      "matchManagers": ["dockerfile", "devcontainer"],
      "matchPackageNames": ["*"],
      "minimumReleaseAge": null
    },
    {
      // devcontainer関連をまとめる
      "matchFileNames": [".devcontainer/**"],
      "groupName": "devcontainer"
    },
    {
      // github actions関連をまとめる
      "matchFileNames": [".github/workflows/*.yaml"],
      "groupName": "githubactions"
    },
    {
      // python/uv関連をまとめる
      "matchFileNames": ["python/pyproject.toml", "python/uv.lock"],
      "groupName": "python"
    },
    {
      // npm関連をまとめる
      "matchFileNames": [
        "node/package.json",
        "node/package-lock.json",
        "node/yarn.lock"
      ],
      "groupName": "node"
    },
    {
      // pythonそのものに関するものを1つにまとめる
      "matchDepNames": ["python"],
      "groupName": "python-runtime",
      // major と non-major を同一PRに入れる
      "separateMajorMinor": false
    }
  ]
}
